<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="com.bolue.scan.mvp.ui.activity.OfflineDetailActivity">
    <include layout="@layout/toolbar_offline_detail"/>
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshview"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_scan_container"
        android:background="#FAFAFA">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/xrecycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAFAFA"
            android:scrollbars="vertical" />
    </com.andview.refreshview.XRefreshView>

    <LinearLayout
        android:id="@+id/ll_scan_container"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/layout_scan_bac"
            android:orientation="vertical">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_download"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="更新数据"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_dialog_cancle"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/layout_scan_bac"
            android:orientation="vertical">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_sign"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="扫码签到"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_dialog_cancle"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/layout_scan_bac"
            android:orientation="vertical">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_upload"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="上传数据"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_dialog_cancle"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_panel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/toolbar"
        android:background="#FAFAFA"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_person_info"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_black"
            android:text="参会人员"
            android:padding="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_panel_participant_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_bolue"
            android:text=""
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>
