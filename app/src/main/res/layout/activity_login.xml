<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.bolue.scan.mvp.ui.activity.LoginActivity">
    <View
        android:id="@+id/top_sperate"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bolue_color"
        />
     <ImageView
         android:id="@+id/v_bac"
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:layout_below="@+id/top_sperate"
         android:src="@drawable/icon_login_bac"
         android:scaleType="fitXY"
         />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3"
        android:layout_marginTop="40dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_user_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:id="@+id/et_user"
            android:layout_toRightOf="@+id/iv_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="邮箱或手机号"
            android:digits="0123456789abcdefghijgklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:textColorHint="@color/color_text_hint"
            android:textColor="@color/color_text_edittext"
            android:layout_toLeftOf="@+id/iv_clear_user"/>
        <ImageView
            android:id="@+id/iv_clear_user"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_clear"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:background="#F3F3F3" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_password"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:id="@+id/et_password"
            android:layout_toRightOf="@+id/iv_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:hint="密码"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijgklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@"
            android:textColorHint="@color/color_text_hint"
            android:textColor="@color/color_text_edittext"
            android:layout_toLeftOf="@+id/ll_password_right"/>
        <RelativeLayout
            android:id="@+id/ll_password_right"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_show_password"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/iv_clear_password"
                android:src="@drawable/selector_show_password" />
            <ImageView
                android:id="@+id/iv_clear_password"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_clear" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3" />
    <TextView
        android:id="@+id/tv_err"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        android:text="用户名或密码错误"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_login_error"

        />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_login_bac"
        android:text="登录"
        android:textColor="@color/color_text_white"
        android:textSize="18sp"

        />
</LinearLayout>
