<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/card_view"
        android:layout_height="110dp"
        android:layout_gravity="center"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="2dp">
    <com.bolue.scan.widget.SwipeMenuLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        app:ios="false"
        app:leftSwipe="true"
        app:swipeEnable="true">
        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/layout_bac"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/iv_checkbox"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:src="@drawable/selector_checkbox"/>
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_breif"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/logo_default"
                app:placeholderImageScaleType="centerCrop"
                />
            <RelativeLayout
                android:id="@+id/rl_float"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#52000000">
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/shape_logout_bac"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_uploaded"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:text="已上传"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_text_white"
                        />
                </LinearLayout>
            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textColor="@color/color_text_black"/>
                <RelativeLayout
                    android:layout_below="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_part"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/icon_parcitipant"/>
                    <TextView
                        android:id="@+id/tv_part"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        android:text="共30人参会"
                        android:layout_toRightOf="@+id/iv_part"
                        android:textColor="#DD6A8097"/>
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"

                        />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_del"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#F46C61">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="删除"
                />
        </RelativeLayout>
    </com.bolue.scan.widget.SwipeMenuLayout>
</android.support.v7.widget.CardView>


