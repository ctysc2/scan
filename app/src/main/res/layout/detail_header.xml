<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:id="@+id/card_title"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_gravity="center"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    app:cardElevation="2dp">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:ellipsize="end"
        android:text="高新技术企业认定认定认定认定高新技术企认定认定认定高新技术企(西安)"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
    </TextView>
</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
        android:id="@+id/card_location"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@drawable/layout_bac"
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignTop="@+id/tv_location"
                    android:src="@drawable/icon_address"/>
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_location"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@+id/iv_right"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:text="福建省地方就是了解封建势力"
                    />
                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:scaleType="fitXY"
                    android:layout_alignTop="@+id/tv_location"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"

                    android:src="@drawable/icon_arrow_right"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="#EAF0F2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2.5">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_time"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2016年9月30日-31日"
                    android:textColor="#333333"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_person_info"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="参会人员"
            android:padding="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_participant_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="(10)"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>