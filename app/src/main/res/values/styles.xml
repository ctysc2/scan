<resources>
    <!-- Base application theme.  -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!--将ActionBar隐藏,这里使用ToolBar-->
        <item name="windowActionBar">false</item>
        <!-- 使用 API Level 22以上编译的话，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>
        <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--colorPrimary 对应ToolBar的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--窗口的颜色-->
        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColorSecondary">#7F666666</item>

    </style>
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <!--&lt;!&ndash; dialog背景样式 &ndash;&gt;-->
        <item name="android:windowBackground">@color/color_dialog_loading_float</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>